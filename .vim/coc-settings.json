{
    "suggest.triggerAfterInsertEnter": true,
    "suggest.timeout": 500,
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "snippets.extends": {
        "cpp": ["c"]
    },
    "languageserver": {
        "ffi-navigator": {
            "command": "python",
            "args": [
                "-m",
                "ffi_navigator.langserver"
            ],
            "filetypes": [
                "cpp",
                "python"
            ]
        }
    },
    "snippets.loadFromExtensions": false
}
